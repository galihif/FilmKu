<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FilmKu" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Title1" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/merriweather_black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>
    <style name="item_title_big" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>
    <style name="title_big" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="item_vote_big" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/mulish_medium</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="drawableLeftCompat">@drawable/ic_star_12</item>
        <item name="android:drawablePadding">@dimen/_4sdp</item>
    </style>

    <style name="see_more" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:background">@drawable/box_outline_grey_8dp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/_8sdp</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/_4sdp</item>
    </style>

    <style name="genre" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:textColor">@color/blue_300</item>
        <item name="android:background">@drawable/box_blue_8dp</item>
        <item name="background">@drawable/box_blue_8dp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/_8sdp</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/_4sdp</item>
    </style>



</resources>